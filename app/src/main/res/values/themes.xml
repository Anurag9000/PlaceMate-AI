<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Placemate" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorSecondary">@color/secondary_accent</item>
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:statusBarColor">@color/background_main</item>
        <item name="android:navigationBarColor">@color/background_main</item>
        
        <item name="colorSurface">@color/surface_glass</item>
        <item name="colorOnSurface">@color/text_bright</item>
        <item name="colorOnBackground">@color/text_bright</item>
    </style>

    <!-- Glassmorphic Card Style -->
    <style name="GlassCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_glass</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#33FFFFFF</item> <!-- Subtle border -->
    </style>

    <style name="Theme.Placemate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Placemate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Placemate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>